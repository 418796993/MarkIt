<Window x:Class="MarkIt.MainInterface.AddContactBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkIt.MainInterface"
        mc:Ignorable="d"
        Title="MarkIt" Height="100" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Height="70" Width="400" >
        <TextBox Name="contactTextBox"
                 Width="150"
                 Height="20" Margin="20,20,221,25"
                 />
        <Button x:Name="confirmButton"
                Width="50"
                Height="20" Margin="230,20,120,25"
                Content="确定"
                Click="confirmButton_Click"/>
        <Button Name="cancelButton"
                Width="50"
                Height="20" Margin="310,20,34,25"
                Content="取消"
                Click="cancelButton_Click"/>
    </Grid>
</Window>
